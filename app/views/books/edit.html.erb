<h1>Editing Book</h1>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

<div>
  <%= flash[:notice] %>
</div>

<p>Title
  <%= f.text_field :title %>
</p>

<p>Body
  <%= f.text_area :body %>
</p>

<div class="button">
  <%= f.submit 'Update Book' %>
</div>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", "/books" %>

<% end %>
